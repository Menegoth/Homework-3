<Window x:Class="Project_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="paymentLabel" Content="Monthly Payment" HorizontalAlignment="Left" Margin="270,125,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="outstandingLabel" Content="Oustanding Balance" HorizontalAlignment="Left" Margin="270,150,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="350,225,0,0" VerticalAlignment="Top" Width="75" Click="submitButton_Click"/>
        <TextBox x:Name="paymentTextBox" HorizontalAlignment="Left" Height="23" Margin="400,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="outstandingTextBox" HorizontalAlignment="Left" Height="23" Margin="400,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
